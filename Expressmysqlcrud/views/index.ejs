<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Index</title>
    <style>
        body {
            font-family: sans-serif;
            margin: 0;
            padding: 20px;
        }

        header {
            text-align: center;
            margin-bottom: 20px;
        }

        main {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .add-product {
            margin-bottom: 20px;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th,
        td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        tbody tr:nth-child(even) {
            background-color: #f5f5f5;
        }

        .actions {
            text-align: right;
        }

        a {
            text-decoration: none;
            color: blue;
        }
    </style>
</head>

<body>
    <header>
        <h1>Product Management System</h1>
    </header>

    <main>
        <section class="add-product">
            <form action="/displayaddform">
                <button type="submit">Add New Product</button>
            </form>
        </section>

        <section class="product-table">
            <table>
                <thead>
                    <tr>
                        <th>Product ID</th>
                        <th>Product Name</th>
                        <th>Product Quantity</th>
                        <th>Product Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (var i=0; i < proddata.length; i++) { %>
                        <tr>
                            <td>
                                <%= proddata[i].pid %>
                            </td>
                            <td>
                                <%= proddata[i].pname %>
                            </td>
                            <td>
                                <%= proddata[i].qty %>
                            </td>
                            <td>
                                <%= proddata[i].price %>
                            </td>
                            <td>
                                <a href="/delete/<%= proddata[i].pid %>">Delete</a>
                                /
                                <a href="/edit/<%= proddata[i].pid %>">Edit</a>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </section>
    </main>

</body>

</html>